# Local Development Environment Variables
# Copy this file to .env.local and fill in your actual values

# PostHog Configuration (REQUIRED)
# Get your API key from: https://app.posthog.com/settings/project-details
POSTHOG_API_KEY=phx_your_actual_api_key_here

# Get your Project ID from the PostHog URL or project settings
# Example: if your PostHog URL is https://app.posthog.com/project/12345
# then your PROJECT_ID is 12345
POSTHOG_PROJECT_ID=your_project_id_here

# PostHog Host (uncomment and modify if using self-hosted PostHog)
# POSTHOG_HOST=https://your-posthog-instance.com

# Proxy Configuration
PROXY_PORT=8080

# Security Configuration
# ⚠️  WARNING: Only enable insecure mode for development/testing!
# This disables authentication and allows unrestricted access to all endpoints
# INSECURE_MODE=true

# Authentication Tokens (will be auto-generated by direnv if not set)
# READ_TOKEN=your_custom_read_token
# WRITE_TOKEN=your_custom_write_token
# ADMIN_TOKEN=your_custom_admin_token

# Custom tokens (optional)
# Format: CUSTOM_TOKEN_N=token:capability1,capability2
# CUSTOM_TOKEN_1=my_api_integration:read,write
# CUSTOM_TOKEN_2=external_service:read

# Feature Flag Configuration
DEFAULT_ROLLOUT_PERCENTAGE=0
ARCHIVE_INSTEAD_OF_DELETE=true

# Type Coercion Feature Gates (disabled by default)
# Enable automatic conversion of numeric strings ("1", "200") to number type
# COERCE_NUMERIC_STRINGS=true

# Enable automatic conversion of boolean strings ("true", "false") to boolean type  
# COERCE_BOOLEAN_STRINGS=true

# Development Settings
LOG_LEVEL=debug
GIN_MODE=debug